@using LaMiaPizzeriaNuova.Models
@model PizzaCategoryForm

<div class="container">
    <h2 class="mb-3">Modifica una pizza.</h2>
    <form asp-controller="Pizza" asp-action="ModifyPizza" asp-route-id="@Model.Pizza.Id" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Pizza.Name" class="form-label">Nome</label>
            <input asp-for="Pizza.Name" type="text" class="form-control" required>
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pizza.Description" class="form-label">Descrizione</label>
            <textarea asp-for="Pizza.Description" rows="10" class="form-control"></textarea>
            <span asp-validation-for="Pizza.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pizza.ImgSource" class="form-label">URL Immagine</label>
            <input asp-for="Pizza.ImgSource" type="text" class="form-control" required>
            <span asp-validation-for="Pizza.ImgSource" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pizza.Price" class="form-label">Prezzo della pizza</label>
            <input asp-for="Pizza.Price" type="text" class="form-control" required>
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <p>Categoria:</p>
            <select asp-for="Pizza.PizzaCategoryId" rows="10" class="d-block w-100">
                <option value=""></option>
                @foreach (PizzaCategory category in Model.PizzaCategories ?? new List<PizzaCategory>())
                {
                    @if (Model.Pizza.PizzaCategoryId == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Salva</button>
    </form>
</div>